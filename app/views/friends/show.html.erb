

<div class="card bg-light mb-3">
  <div class="card-header">
    <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
</div>

  <div class="card-body">
    <p class="lead">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.character_most_like %>

  </p>
  <br/>

  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-info" %> |
   <%= link_to "Delete", @friend, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this friend?' }, class: 'btn btn-danger' %> |

  <%= link_to "Back", friends_path, class:"btn btn-secondary" %> 
<br/><br/>

  

  </div>
</div>


   
 

  



  

